@model ProjectX.Models.ViewModelPost
<div id="listPost" style="overflow:hidden; padding:30px;padding-top:0;">
    <h2>Comentários</h2>
    <div class="container" style="overflow:hidden;">
        <div class="row">
            <div class="[ col-xs-12 ]">
                <div class="[ panel panel-default ] panel-google-plus">
                    <div class="panel-google-plus-tags">
                    </div>

                    @foreach (var post in Model.Posts)
                    {
                        <div class="panel-heading" style="background-color:white;">
                            
                            @if (post.IsAnonimo)
                            {
                                <h4>• Anônimo</h4>
                            }
                            else
                            {
                                <h4>• @post.UserName</h4>
                            }
                            <div>@post.Data</div>
                            <p>@post.Descricao</p>

                        <img src="/Images/@post.ClassificationImg" style="position: relative; margin-left: 700px; margin-top: -64px; width: 50px;" />

                        </div>
                    }
                </div>
            </div>


        </div>
    </div>
</div>